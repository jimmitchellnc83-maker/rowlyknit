# Rowly Production Environment Configuration
# Copy this file to .env and fill in your production values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000
API_VERSION=v1

# URLs
API_URL=https://api.rowlyknit.com
FRONTEND_URL=https://rowlyknit.com
ALLOWED_ORIGINS=https://rowlyknit.com,https://www.rowlyknit.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rowly_production
DB_USER=rowly_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_DB=0

# ============================================
# SECURITY
# ============================================

# JWT Configuration
JWT_SECRET=CHANGE_ME_32_CHARACTER_RANDOM_STRING_HERE
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_HERE
SESSION_COOKIE_MAX_AGE=604800000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# CSRF Configuration
CSRF_COOKIE_SECURE=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=20

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR=/home/rowly/rowlyknit/backend/uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email Provider (sendgrid, postmark, ses)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=CHANGE_ME_EMAIL_API_KEY_HERE

# Email Addresses
EMAIL_FROM=noreply@rowlyknit.com
EMAIL_FROM_NAME=Rowly Knitting App
EMAIL_REPLY_TO=support@rowlyknit.com

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=CHANGE_ME_SENDGRID_API_KEY_HERE

# AWS SES Configuration (if using SES)
AWS_REGION=us-east-1
AWS_SES_ACCESS_KEY=CHANGE_ME_AWS_ACCESS_KEY
AWS_SES_SECRET_KEY=CHANGE_ME_AWS_SECRET_KEY

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=/home/rowly/rowlyknit/backend/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# ============================================
# CORS
# ============================================
CORS_ORIGIN=https://rowlyknit.com

# ============================================
# SSL/SECURITY
# ============================================
TRUST_PROXY=true
FORCE_HTTPS=true

# Security Headers
HELMET_HSTS_MAX_AGE=31536000
HELMET_HSTS_INCLUDE_SUBDOMAINS=true
HELMET_HSTS_PRELOAD=true

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Error Tracking (Sentry, optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
PLAUSIBLE_DOMAIN=rowlyknit.com

# ============================================
# CLOUDFLARE (Optional CDN)
# ============================================
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_KEY=

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_SOCKET_IO=true

# ============================================
# GDPR & COMPLIANCE
# ============================================
DATA_RETENTION_DAYS=365
ENABLE_GDPR_MODE=true

# ============================================
# PERFORMANCE
# ============================================
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# ============================================
# DEVELOPMENT/DEBUG (Set to false in production)
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
